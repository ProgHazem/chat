<h4 class="ui center aligned icon header">
  <i class="circular blue coffee icon"></i>
  Say Somethings
</h4>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui small feed">
          <% if @messages.any? %>
            <%= render @messages %>
          <% end %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: 'ui reply form', role: 'form', autocomplete: "off"}, url: message_path) do |f| %>
          <div class="field">
            <div class="ui fluid icon">
              <div class="ui icon input">
                <%= f.text_field :body, placeholder: "Enter Message . . . " %>
                <%= f.button '<i class="bordered inverted blue edit icon"></i>'.html_safe %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="four wide column">
      <div class="ui fluid raised card chatbox">
        <div class="content">
          <div class="ui inverted vertical menu">
            <a class="active item">
              Home
            </a>
            <a class="item">
              Messages
            </a>
            <a class="item">
              Friends
            </a>
          </div>
        </div>
      </div>
  </div>
</div>
